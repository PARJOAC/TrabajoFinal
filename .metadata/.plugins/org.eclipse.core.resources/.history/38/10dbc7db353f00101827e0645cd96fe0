package bd;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import util.MiExcepcion;

public class BDConnection {

	/**
	 * Variables de instancia
	 * Para poder establecer una conexión con la base de datos
	 */
	// URL de la base de datos del supermercado
	private static final String URL = "jdbc:mysql://localhost:3306/supermercado";
	
	// Usuario de la base de datos
	private static final String USER = "AdministradorSupermercado";
	
	// Contraseña del usuario de la base de datos
	private static final String PASSWORD = "AdministradorSupermercado";

	// Método principal para obtener la conexión a la base de datos
	public static Connection getConnection() throws SQLException, ClassNotFoundException, MiExcepcion {
		Class.forName("com.mysql.cj.jdbc.Driver");
		try (Connection conexion = DriverManager.getConnection(URL, USER, PASSWORD)){
			System.out.println("Se ha registrado una conexión.");
			return conexion;
		} catch(Exception e) {
			
		}
		
		
		

	}
}
