package util;

import java.io.Serializable;

import javax.swing.JButton;

import enumeraciones.Temas;

public class BotonCambiarTema extends JButton implements Serializable{

	private static final long serialVersionUID = -5612586807572350789L;
	
	public static void botonCambiarTema() {
		// Aplica el estilo visual a toda la interfaz
		EstiloVista estiloVista = new EstiloVista(Temas.Claro);
		estiloVista.cambiarTema();
	}

}
